<%- model_class = Property -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-2"> 
        <div id="map-canvas" style="width: 400px; height: 300px"></div> 
    </div>

    <div class="col-md-4"> 
        <strong><%= model_class.human_attribute_name(:name) %>:</strong>
        <%= @property.name %>
        <strong><%= model_class.human_attribute_name(:address) %>:</strong>
        <%= @property.address %>
    </div>
  </div>

  <div class="row">
  <dt><strong><%= model_class.human_attribute_name(:property_type) %>:</strong></dt>
  <dd><%= @property.property_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @property.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:property_manager_id) %>:</strong></dt>
  <dd><%= @property.property_manager.name %></dd>

  </div>

